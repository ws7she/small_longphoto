/**index.wxss**/
.index{
  position: relative;
}
.index-bg{
  width: 100%;
  padding-top: 50%;
  background-size: cover;
}
.index-content{
  padding-top: 30rpx;
}

.index-btn{
  display: flex;
  display: -webkit-flex;
  padding-top: 20%;
}
.index-btn .easy-btn,.index-btn .complex-btn{
  display: block;
  flex: 1;
  -webkit-flex:1;
  text-align: center;
}
.iconfont{
  display: inline-block;
  width: 140rpx;
  height: 150rpx;
  background-repeat: no-repeat;
}
.con-begin{
  color: #666;
  text-align: center;
  display: block;
  font-size: 14px;
}

.easy,.complex{
  position:absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100%;
  background-color: #fff;
  z-index: 9;
}
.easy-addPic{
  width: 100%;
  height: 300rpx;
  background-color: #F2F2F2;
  color: #999;
  text-align: center;
  line-height: 300rpx;
  font-size: 12px;
  }
  .easy-fontShow{
    padding: 14rpx;
    box-sizing: border-box;
  }
